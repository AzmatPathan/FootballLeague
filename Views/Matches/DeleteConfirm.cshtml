@model FootballLeague.Models.MatchesDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>DeleteConfirm</h2>


<h2>Are you sure you want to delete?</h2>
<a href="/Matches/List">Go back to list</a>
<h2>Match Number: @Model.matchID</h2>
<div>Home Club: @Model.homeClub</div>
<div>Away Club: @Model.awayClub</div>
<div>Score: @Model.score</div>

<form action="/Matches/Delete/@Model.matchID" method="POST">
    <input type="submit" value="Delete" />
</form>

